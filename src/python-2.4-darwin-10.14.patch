+                        if line == '/usr/include':
+                            MACOS_SDK_ROOT = '/'
+                        elif line.endswith(".sdk/usr/include"):
+                            MACOS_SDK_ROOT = line[:-12]
+        finally:
+            os.unlink(tmpfile)
+
+    return MACOS_SDK_ROOT
