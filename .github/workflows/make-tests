# only include compiled deps for non-PyPy targets
ifeq (,$(findstring pypy,$(buildout_target)))
define includeparts
    $${buildout:readline-parts}
    $${buildout:zlib-parts}
    $${buildout:openssl10-parts}
endef
endif

define cfg
[buildout]
extends =
    src/base.cfg
    src/readline.cfg
    src/zlib.cfg
    src/openssl10.cfg
    src/$(buildout_target).cfg
python-buildout-root = $${buildout:directory}/src
parts =
    $${buildout:base-parts}
$(includeparts)
    $${buildout:$(buildout_target)-parts}
[python-build:default]
optimizations =

endef
export cfg

all: .installed.cfg

test.cfg:
	test -e $@ || echo "$$cfg" > $@

bin/buildout:
	python bootstrap.py

.installed.cfg: test.cfg bin/buildout
	bin/buildout -vvc test.cfg
